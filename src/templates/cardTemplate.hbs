{{#each hits}}
<li class="gallery__item" >
    <div class="photo-card" tabindex="3">
        <img src="{{webformatURL}}" width= "360" alt="{{tags}}" data-largeImg ="{{largeImageURL}}" "/>

        <div class="stats">
            <p class="stats-item">
                <i class="material-icons">thumb_up</i>
                {{likes}}
            </p>
            <p class="stats-item">
                <i class="material-icons">visibility</i>
                {{views}}
            </p>
            <p class="stats-item">
                <i class="material-icons">comment</i>
                {{comments}}
            </p>
            <p class="stats-item">
                <i class="material-icons">cloud_download</i>
                {{downloads}}
            </p>
        </div>
    </div>
</li>
{{/each}}